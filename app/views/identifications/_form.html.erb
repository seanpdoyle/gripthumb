<section class="songs" data-controller="identifications" data-action="gripthumb:results@document->identifications#publish">
  <progress data-action="gripthumb:progress@document->identifications#trackProgress" data-target="identifications.progress" value="0" max="100">
    0%
  </progress>
  <button class="songs--record-button" data-action="identifications#record" data-target="identifications.recordButton">
    <%= t(".record") %>
  </button>

  <%= form_with model: identification, class: "songs--form songs--form__enabled", data: {
    target: "identifications.form",
  } do |f| %>
    <%= f.label :tui %>
    <%= f.text_field :tui, data: { target: "identifications.tui" } %>

    <%= f.label :artist %>
    <%= f.text_field :artist, data: { target: "identifications.artist" } %>

    <%= f.label :name %>
    <%= f.text_field :name, data: { target: "identifications.name" } %>

    <%= f.submit %>
  <% end %>
</section>
