<section
  class="recordings"
  data-controller="recordings"
  data-action="gripthumb:results@document->recordings#search"
>
  <button
     aria-label="<%= t(".button") %>"
     class="recordings--record-button"
     data-action="recordings#start"
     data-target="recordings.button"
  >
    <%= render("microphone.svg", height: 200, width: 200) %>
  </button>

  <%= form_with(
    class: "recordings--form",
    model: recording,
    html: {
      "aria-hidden" => true,
    },
  ) do |f| %>
    <%= f.label :tui %>
    <%= f.text_field :tui, "data-target" => "recordings.tui" %>

    <%= f.label :artist %>
    <%= f.text_field :artist, "data-target" => "recordings.artist" %>

    <%= f.label :name %>
    <%= f.text_field :name, "data-target" => "recordings.name" %>

    <%= f.submit "data-target" => "recordings.submit" %>
  <% end %>
</section>
